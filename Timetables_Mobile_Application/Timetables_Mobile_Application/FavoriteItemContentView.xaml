<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timetables.Application.Mobile.FavoriteItemContentView">
  <ContentView.Content>
		<StackLayout HorizontalOptions="FillAndExpand" Margin="0,10">
			<Frame BorderColor="Gray">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="75*" />
						<ColumnDefinition Width="15*" />
						<ColumnDefinition Width="15*" />
					</Grid.ColumnDefinitions>

					<StackLayout VerticalOptions="Center" Grid.Column="0" Grid.Row="0">
						<Label x:Name="firstLabel" />
						<Label x:Name="secondLabel" />
					</StackLayout>
					<ImageButton BackgroundColor="#00000000" x:Name="findButton" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Source="@drawable/find.png" Grid.Column="1" Grid.Row="0" Clicked="FindButton_Clicked" />
					<ImageButton BackgroundColor="#00000000" x:Name="removeButton" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Source="@drawable/remove.png" Grid.Column="2" Grid.Row="0" Clicked="RemoveButton_Clicked" />
				</Grid>
			</Frame>			
		</StackLayout>
  </ContentView.Content>
</ContentView>